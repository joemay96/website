---
export interface props {
    imagePath: string;
    title: string;
}

const { imagePath, title } = Astro.props;
const image = 'url(' + imagePath + ')';
---

<div class='showcase flex justify-center items-center'>
    <h1 class='text-6xl font-bold text-white'>{title}</h1>
</div>

<style define:vars={{ image }}>
    .showcase {
        widht: 100%;
        min-height: 35vh;
        max-height: 45vh;
        background-image: var(--image);
        background-color: hsl(var(--p));
        background-size: auto;
        background-position: center;
    }
</style>
